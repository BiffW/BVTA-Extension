<?xml version="1.0" encoding="utf-8"?>
<Items>
    <!--单束混合激光-->
    <Item identifier="pulselaserboltmixed" nameidentifier="pulselaserbolt" variantof="pulselaserbolt">
        <Sprite texture="Content/Items/Weapons/weapons_new.png" sourcerect="143,414,113,9" depth="0.55" />
        <Projectile penetration="0.5">
            <Attack structuredamage="75" targetforce="100" itemdamage="25" severlimbsprobability="1.0" penetration="0.5">
                <Affliction identifier="explosiondamage" strength="60" />
                <Affliction identifier="stun" strength="0.8" />
            </Attack>
            <StatusEffect type="OnImpact" target="UseTarget">
                <Explosion range="225.0" ballastfloradamage="75" structuredamage="75" itemdamage="250">
                    <Affliction identifier="burn" strength="150" />
                    <Affliction identifier="stun" strength="5" />
                </Explosion>
            </StatusEffect>
        </Projectile>
    </Item>
    <!-- 三联混合激光 -->
    <Item identifier="pulselaserboltmixedtrilaser" nameidentifier="pulselaserbolt" variantof="pulselaserbolttrilaser" tags="pulselaserboltmixed">
        <Sprite texture="Content/Items/Weapons/weapons_new.png" sourcerect="143,414,113,9" depth="0.55" />
        <Projectile penetration="0.5">
            <Attack structuredamage="35" targetforce="70" itemdamage="17" severlimbsprobability="1.0" penetration="0.5">
                <Affliction identifier="explosiondamage" strength="50" />
                <Affliction identifier="stun" strength="0.3" />
            </Attack>
            <StatusEffect type="OnImpact" target="UseTarget">
                <Explosion range="150.0" ballastfloradamage="35" structuredamage="35" itemdamage="200">
                    <Affliction identifier="burn" strength="115" />
                    <Affliction identifier="stun" strength="2" />
                </Explosion>
            </StatusEffect>
        </Projectile>
    </Item>
    <!--混合激光燃料箱-->
    <Item identifier="pulselaserammoboxmixed" variantof="pulselaserammoboxtrilaser">
        <PreferredContainer primary="pulselaserammosource,ammoboxcontainer" mincondition="1" />
        <PreferredContainer secondary="wreckammoboxcontainer" amount="1" spawnprobability="0.02" />
        <Price baseprice="450" sold="false" displaynonempty="true" minleveldifficulty="35">
            <Price storeidentifier="merchantoutpost" multiplier="1.3" />
            <Price storeidentifier="merchantcity" multiplier="1.2" />
            <Price storeidentifier="merchantresearch" multiplier="0.9" sold="true" minavailable="3" />
            <Price storeidentifier="merchantmilitary" multiplier="1" sold="true" minavailable="1" />
            <Price storeidentifier="merchantmine" multiplier="1.2" />
            <Price storeidentifier="merchantarmory" multiplier="1" sold="true" minavailable="1" />
        </Price>
        <Deconstruct time="10">
            <Item identifier="fulgurium" mincondition="0.95" />
            <Item identifier="lithium" mincondition="0.95" />
            <Item identifier="aluminium" />
        </Deconstruct>
        <Fabricate suitablefabricators="fabricator" requiredtime="25">
            <RequiredSkill identifier="weapons" level="70" />
            <RequiredItem identifier="fulgurium" />
            <RequiredItem identifier="alienblood" />
            <RequiredItem identifier="aluminium" />
            <RequiredItem identifier="lithium" />
        </Fabricate>
        <Fabricate suitablefabricators="fabricator" displayname="recycleitem" requiredtime="20">
            <RequiredSkill identifier="weapons" level="65" />
            <RequiredItem identifier="fulgurium" />
            <RequiredItem identifier="alienblood" />
            <RequiredItem tag="pulselaserammo" mincondition="0.0" maxcondition="0.0" usecondition="false" />
            <RequiredItem identifier="lithium" />
        </Fabricate>
        <Sprite texture="%ModDir:BVTA Extension%/images/ammoboxes.png" sourcerect="0,160,95,78" />
        <ItemContainer SpawnWithId="pulselaserboltmixed">
            <StatusEffect type="OnUse" target="This" disabledeltatime="true">
                <SpawnItem identifiers="pulselaserboltmixed" spawnposition="ThisInventory" />
                <Conditional hastag="one" />
            </StatusEffect>
            <StatusEffect type="OnUse" target="This" condition="-1.25" disabledeltatime="true">
                <RequiredItem items="pulselaserboltmixed" type="Contained" />
            </StatusEffect>
            <StatusEffect type="OnUse" target="This" disabledeltatime="true">
                <SpawnItem identifiers="pulselaserboltmixedtrilaser" spawnposition="ThisInventory" />
                <Conditional hastag="three" />
            </StatusEffect>
            <StatusEffect type="OnSpawn" target="this" tags="one" setvalue="true" />
            <StatusEffect type="OnUse" target="this" tags="one" setvalue="true" delay="0.1" stackable="false" checkconditionalalways="true">
                <Conditional hastag="three" />
            </StatusEffect>
            <StatusEffect type="OnUse" target="this" tags="three" setvalue="true" delay="0.1" stackable="false" checkconditionalalways="true">
                <Conditional hastag="one" />
            </StatusEffect>
            <Containable items="pulselaserboltmixed" />
        </ItemContainer>
    </Item>
    <!--冷照明-->
    <Item name="Cold Light" identifier="coldlight" nonplayerteaminteractable="True">
        <Sprite texture="%ModDir%/images/PulseLaserCold.png" sourcerect="0,0,1,1" depth="0.55" origin="0.5,0.5" />
        <Body width="15" height="15" density="10" />
        <Projectile launchimpulse="20" StickToStructures="true" />
        <LightComponent LightColor="0,162,232,255" Flicker="0.2" range="500" IsOn="true">
            <StatusEffect type="OnActive" targettype="This" Condition="-20" />
            <StatusEffect type="OnBroken" targettype="This">
                <Remove />
            </StatusEffect>
        </LightComponent>
    </Item>
    <!--穿透激光-->
    <Item identifier="pulselaserboltpiercing" nameidentifier="pulselaserbolt" variantof="pulselaserbolt">
        <Sprite texture="Content/Items/Weapons/weapons_new.png" sourcerect="143,414,113,9" depth="0.55" />
        <Projectile penetration="0.5" maxtargetstohit="3">
            <ParticleEmitter particle="tracerpulselasercold" />
            <Attack structuredamage="25" targetforce="100" itemdamage="25" severlimbsprobability="1.0" penetration="0.5">
                <Affliction identifier="explosiondamage" strength="30" />
                <Affliction identifier="stun" strength="0.3" />
            </Attack>
            <StatusEffect type="OnImpact" target="UseTarget">
                <ParticleEmitter particle="muzzleflashpulselasercold" />
                <Explosion range="150.0" ballastfloradamage="75" structuredamage="25" itemdamage="250">
                    <Affliction identifier="burn" strength="70" />
                    <Affliction identifier="stun" strength="2" />
                </Explosion>
            </StatusEffect>
            <StatusEffect type="OnImpact" target="UseTarget">
                <SpawnItem identifiers="coldlight" spawnposition="This" aimspread="0" rotationtype="Collider" rotation="0" />
            </StatusEffect>
        </Projectile>
    </Item>
    <!--穿透激光弹药箱-->
    <Item identifier="pulselaserammoboxpiercing" variantof="pulselaserammoboxtrilaser">
        <Sprite texture="%ModDir:BVTA Extension%/images/ammoboxes.png" sourcerect="192,0,95,78" />
        <ItemContainer SpawnWithId="pulselaserboltpiercing">
            <StatusEffect>
                <SpawnItem identifiers="pulselaserboltpiercing" />
            </StatusEffect>
            <StatusEffect>
                <RequiredItem items="pulselaserboltpiercing" />
            </StatusEffect>
            <Containable items="pulselaserboltpiercing" />
        </ItemContainer>
    </Item>
</Items>